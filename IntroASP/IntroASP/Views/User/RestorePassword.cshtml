@using IntroASP.Application.DTOs;

@model DTORestorePass

<h2>Restaurar contraseña</h2>

<form asp-controller="User" asp-action="RestorePasswordUser" method="post">
    <input type="hidden" asp-for="@Model.UserId" />
    <input type="hidden" asp-for="@Model.Token" />


    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="password" asp-for="Password" required>
    </div>
   

  
    <button type="submit" class="btn btn-primary">Restaurar</button>
</form>
