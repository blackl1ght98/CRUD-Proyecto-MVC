@model List<Beer>
<h1>Cervezas</h1>
<p>
    <a asp-action="Create" class="btn btn-info">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Marca</th>
            <th></th>
        </tr>

    </thead>

    <tbody>
            @foreach (var beer in Model)
            {
            <tr>
                <td>@Html.DisplayFor(m => beer.Name)</td>
                <td>@Html.DisplayFor(m => beer.Brand.Name)</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@beer.BeerId" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@beer.BeerId" class="btn btn-warning">Update</a>
                </td>
            </tr>
            }
    </tbody>

</table>