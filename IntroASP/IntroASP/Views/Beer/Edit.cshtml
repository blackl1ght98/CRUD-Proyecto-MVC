@model Beer




<h2>Editar Cerveza</h2>

<form asp-action="Edit" asp-controller="Beer" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="BeerId" />
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" required> 
    </div>
    <div class="form-group">
        <!--asp-for es para decir con que se va a relacionar-->

        <label asp-for="BrandId" class="control-label"></label>
      
        <select asp-for="BrandId" class="form-select" asp-items="ViewBag.Brands"></select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>
    <button type="submit" value="Save" class="btn btn-primary mt-2">Editar</button>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-warning">
            @TempData["SuccessMessage"]
        </div>
    }
</form>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
